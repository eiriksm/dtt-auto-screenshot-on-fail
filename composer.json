{
    "name": "eiriksm/dtt-auto-screenshot-on-fail",
    "description": "Take a screenshot automatically if tests fails",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "eiriksm\\DttAutoScreenshotOnFail\\": "src/"
        }
    },
    "scripts": {
        "test": "@composer phpcs && composer run phpstan",
        "phpstan": "phpstan analyse src",
        "phpcs": "phpcs src"
    },
    "authors": [
        {
            "name": "Eirik S. Morland",
            "email": "eirik@morland.no"
        }
    ],
    "require-dev": {
        "weitzman/drupal-test-traits": "^2.5",
        "phpunit/phpunit": "^8 || ^9",
        "slevomat/coding-standard": "^8.15",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
